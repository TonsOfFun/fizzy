- **Assigned to:** <%= assignees.join(", ") %>
<% end %>
<% end %>
<% if @card_context["dueDate"].present? || @card_context[:dueDate].present? %>
- **Due Date:** <%= @card_context["dueDate"] || @card_context[:dueDate] %>
<% end %>
<% else %>
<%= @card_context %>
<% end %>

<% end %>
